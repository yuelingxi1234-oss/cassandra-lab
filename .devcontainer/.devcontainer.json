{
    "name": "Cassandra Lab Environment",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/itsmechlark/features/another-docker-image:1": {
            "image": "cassandra:latest"
        }
    },
    "postCreateCommand": "docker run --name mycassandra -p 9042:9042 -d cassandra:latest && sleep 30",
    "portsAttributes": {
        "9042": {
            "label": "Cassandra"
        }
    }
}
